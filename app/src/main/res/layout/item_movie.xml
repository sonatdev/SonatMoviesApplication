<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/rectangle_bordered_8dp"
    android:backgroundTint="@color/black_half_transparent">

    <ImageView
        android:id="@+id/image_movie_poster"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:adjustViewBounds="true"
        android:background="@drawable/avengers_poster"
        android:src="@drawable/gradient_mask_bw"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_movie_pg_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rectangle_rounded_5dp"
        android:backgroundTint="@color/background"
        android:gravity="center"
        android:text="@string/movies_movie_pg_rating"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/image_movie_like"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="@+id/image_movie_poster"
        app:layout_constraintTop_toTopOf="@+id/image_movie_poster" />

    <ImageView
        android:id="@+id/image_movie_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_like"
        app:layout_constraintBottom_toBottomOf="@+id/text_movie_pg_rating"
        app:layout_constraintEnd_toEndOf="@+id/image_movie_poster"
        app:layout_constraintStart_toEndOf="@+id/text_movie_pg_rating"
        app:layout_constraintTop_toTopOf="@+id/text_movie_pg_rating"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/text_movie_tags"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="5dp"
        android:text="@string/movies_movie_tags"
        android:textColor="@color/radical_red"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/image_movie_rating_star1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/image_movie_poster" />

    <ImageView
        android:id="@+id/image_movie_rating_star1"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/image_movie_poster"
        app:layout_constraintEnd_toStartOf="@+id/image_movie_rating_star2"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@+id/text_movie_tags"
        app:srcCompat="@drawable/ic_rating_star"
        app:tint="@color/radical_red_2" />

    <ImageView
        android:id="@+id/image_movie_rating_star2"
        android:layout_width="10dp"
        android:layout_height="10dp"
        app:layout_constraintEnd_toStartOf="@+id/image_movie_rating_star3"
        app:layout_constraintStart_toEndOf="@+id/image_movie_rating_star1"
        app:layout_constraintTop_toTopOf="@+id/image_movie_rating_star1"
        app:srcCompat="@drawable/ic_rating_star"
        app:tint="@color/radical_red_2" />

    <ImageView
        android:id="@+id/image_movie_rating_star3"
        android:layout_width="10dp"
        android:layout_height="10dp"
        app:layout_constraintEnd_toStartOf="@+id/image_movie_rating_star4"
        app:layout_constraintStart_toEndOf="@+id/image_movie_rating_star2"
        app:layout_constraintTop_toTopOf="@+id/image_movie_rating_star2"
        app:srcCompat="@drawable/ic_rating_star"
        app:tint="@color/radical_red_2" />

    <ImageView
        android:id="@+id/image_movie_rating_star4"
        android:layout_width="10dp"
        android:layout_height="10dp"
        app:layout_constraintEnd_toStartOf="@+id/image_movie_rating_star5"
        app:layout_constraintStart_toEndOf="@+id/image_movie_rating_star3"
        app:layout_constraintTop_toTopOf="@+id/image_movie_rating_star3"
        app:srcCompat="@drawable/ic_rating_star"
        app:tint="@color/radical_red_2" />

    <ImageView
        android:id="@+id/image_movie_rating_star5"
        android:layout_width="10dp"
        android:layout_height="10dp"
        app:layout_constraintStart_toEndOf="@+id/image_movie_rating_star4"
        app:layout_constraintTop_toTopOf="@+id/image_movie_rating_star4"
        app:srcCompat="@drawable/ic_rating_star"
        app:tint="@color/storm_gray" />

    <TextView
        android:id="@+id/text_movie_reviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/movie_details_label_reviews"
        android:textAllCaps="true"
        android:textColor="@color/storm_gray"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/image_movie_rating_star1"
        app:layout_constraintStart_toEndOf="@+id/image_movie_rating_star5"
        app:layout_constraintTop_toTopOf="@+id/image_movie_rating_star1" />

    <TextView
        android:id="@+id/text_movie_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/movies_movie_name"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/text_movie_tags"
        app:layout_constraintTop_toBottomOf="@+id/image_movie_poster" />

    <TextView
        android:id="@+id/text_movie_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="@string/movies_label_movie_duration"
        android:textColor="@color/storm_gray"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/text_movie_name"
        app:layout_constraintTop_toBottomOf="@id/text_movie_name" />

</androidx.constraintlayout.widget.ConstraintLayout>